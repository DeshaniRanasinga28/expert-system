<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ef.expert.ScenarioActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/id_textView"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/case_textView"
        android:padding="20dp"
        android:textSize="16dp"
        android:textColor="@color/abc_primary_text_disable_only_material_light"
        android:layout_below="@+id/id_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/case_imageView"
        android:scaleType="center"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/case_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/case_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp">

        <RadioButton
            android:id="@+id/yes_radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioGroup"
            android:layout_alignEnd="@+id/radioGroup"
            android:layout_alignRight="@+id/radioGroup"
            android:layout_marginBottom="57dp"
            android:layout_marginEnd="17dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="17dp"
            android:padding="10dp"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="12dp" />

        <RadioButton
            android:id="@+id/no_radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/radioGroup"
            android:layout_alignLeft="@+id/yes_radioButton"
            android:layout_alignStart="@+id/yes_radioButton"
            android:padding="10dp"
            android:textColor="@color/abc_primary_text_disable_only_material_light"
            android:textSize="12dp" />

    </RadioGroup>

</RelativeLayout>
